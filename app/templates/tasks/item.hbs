<div class="panel-heading">
    <h3 class="panel-title">{{view.content.title}} </h3>
</div>

<div class="panel-body">
    {{view.content.description}}
</div>

<div class="panel-footer">
    <a href="#" class="pull-right text-danger" {{action delete target=view.content}}>Delete</a>
    {{#unless view.content.isFinishState}}
        <a href="#" class="pull-left" {{action transitionToNextState target=view.content}}>Transition to {{humanize-value view.content.nextStatus}}</a>
    {{/unless}}
    <div class="clearfix"></div>
</div>